{% extends 'index.html.twig' %}

{% block body %}
    <div class="container">
        <div class="blog-header">
            <h1 class="blog-title">
                {% if type == 'edit' %}Edit{% else %}Create{% endif %} blog
            </h1>
        </div>

        <div class="row">
            {#{{ dump() }}#}

            <div class="col-sm-8 blog-main">
                {% if error %}
                    <div class="alert alert-danger fade in">
                        <a href="#" class="close" data-dismiss="alert">&times;</a>
                        <strong>Error!</strong> Please fill all fields.
                    </div>
                {% endif %}

                <form method="post" name="post">
                    <div class="form-group">
                        <label for="title">Title*</label>
                        <input type="text" class="form-control" name="title" placeholder="Title" value="{{ post.title }}">
                    </div>
                    <div class="form-group">
                        <label for="name">Name*</label>
                        <input type="text" class="form-control" name="author" placeholder="Name" value="{{ post.author }}">
                    </div>
                    <div class="form-group">
                        <label for="message">Message*</label>
                        <textarea type="text" class="form-control" name="message" placeholder="Message">{{ post.message }}</textarea>
                    </div>
                    <input type="hidden" value="post" name="post">
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div><!-- /.blog-main -->

            <div class="col-sm-3 col-sm-offset-1 blog-sidebar">
                <a href="/" class="btn btn-default btn-lg" role="button">Back</a>
            </div><!-- /.blog-sidebar -->

        </div><!-- /.row -->

    </div><!-- /.container -->
{% endblock %}
